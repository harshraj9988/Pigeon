<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical">

    <TextView
        android:id="@+id/click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Friends can still be added by searching their phone numbers.\n\nYou can grant the permission by visiting your phone's settings -> apps -> Pigeon -> permissions -> contacts -> 'allow'"
        android:textColor="@color/text_color" />

    <CheckBox
        android:id="@+id/don_t_show_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Do not show again"
        android:textColor="@color/text_color_light" />
</LinearLayout>
